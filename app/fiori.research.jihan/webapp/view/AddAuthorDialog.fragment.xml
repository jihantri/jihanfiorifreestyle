<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="AddAuthorConfirmDialog"
        title="Create Author"
        contentWidth="400px"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Name" />
            <Input
                id="addNameInput"
                required="true"
            />

            <Label text="Bio" />
            <TextArea
                id="addBioInput"
                required="true"
                width="100%"
            />
        </VBox>

        <beginButton>
            <Button
                text="Create"
                press=".onAddAuthorConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onDialogCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
