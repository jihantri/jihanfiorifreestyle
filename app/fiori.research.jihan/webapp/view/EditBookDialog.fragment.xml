<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog title="Edit Book">
        <VBox class="sapUiSmallMargin">
            <Input
                id="editTitleInput"
                placeholder="Title"
            />
            <TextArea
                id="editDescrInput"
                placeholder="Description"
                width="100%"
            />
            <Input
                id="editStockInput"
                placeholder="Stock"
                type="Number"
            />
            <Input
                id="editPriceInput"
                placeholder="Price"
                type="Number"
            />
            <Input
                id="editCurrencyInput"
                placeholder="Currency"
            />
        </VBox>
        <beginButton>
            <Button
                text="Edit"
                press=".onEditBookConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onDialogCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
